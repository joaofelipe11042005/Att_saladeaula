
using System;

class Exercicio4
{
    static void Main()
    {
        int numero;

        Console.Write("Digite um número inteiro: ");
        numero = int.Parse(Console.ReadLine());

        if (numero % 2 == 0)
        {
            Console.WriteLine("O número é PAR.");
        }
        else
        {
            Console.WriteLine("O número é ÍMPAR.");
        }

        Console.ReadKey();
    }
}
